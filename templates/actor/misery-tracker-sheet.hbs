<form class="{{cssClass}} {{data.system.miseryAnimationClass}} {{data.system.seventhMiseryClass}}" autocomplete="off">
  <div class="title">
      <input
        class="actor-name"
        name="name"
        type="text"
        value="{{actor.name}}"
        placeholder=""
        spellcheck="false"
      />
  </div>      
  <div class="miseries">
    <div class="misery-block {{data.system.misery1.cssClass}}">
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}          
      <input
        type="text"
        name="system.misery1.psalm"
        value="{{data.system.misery1.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery1.verse"
        value="{{data.system.misery1.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />        
    </div>
    <div class="misery-block {{data.system.misery2.cssClass}}">
      <input
        type="text"
        name="system.misery2.psalm"
        value="{{data.system.misery2.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery2.verse"
        value="{{data.system.misery2.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery3.cssClass}}">
      <input
        type="text"
        name="system.misery3.psalm"
        value="{{data.system.misery3.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery3.verse"
        value="{{data.system.misery3.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery4.cssClass}}">
      <input
        type="text"
        name="system.misery4.psalm"
        value="{{data.system.misery4.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery4.verse"
        value="{{data.system.misery4.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery5.cssClass}}">
      <input
        type="text"
        name="system.misery5.psalm"
        value="{{data.system.misery5.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery5.verse"
        value="{{data.system.misery5.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery6.cssClass}}">
      <input
        type="text"
        name="system.misery6.psalm"
        value="{{data.system.misery6.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery6.verse"
        value="{{data.system.misery6.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>                
    <div class="seven-seven">
      <div class="numbers">7:7</div>
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
  </div>

  {{#if data.system.seventhMiseryClass}}
    <div class="endtimes">
      {{ localize "MB.SeventhSealIsBroken" }} 
      <span class="burn-the-book">{{ localize "MB.BurnTheBook" }}</span>
    </div>
  {{else}}
    <div class="agony-block">
      <div class="agony-title">{{ localize "MB.WhenWillAllThisAgonyEnd" }}</div>
      <select name="system.miseryDie">
        {{#select data.system.miseryDie}}
          <option value="1d100">{{ localize "MB.MiseryDie100" }}</option>
          <option value="1d20">{{ localize "MB.MiseryDie20" }}</option>
          <option value="1d10">{{ localize "MB.MiseryDie10" }}</option>
          <option value="1d6">{{ localize "MB.MiseryDie6" }}</option>
          <option value="1d2">{{ localize "MB.MiseryDie2" }}</option>
        {{/select}}
        </select>
    </div>

    <div class="button-block">
      <button class="sheet-button misery-button">{{ localize "MB.RollForMisery" }}</button>
    </div>
  {{/if}}
  
</form>